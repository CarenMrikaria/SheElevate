@model SheElevate.Models.Company

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4" style="color: #ff66b2;">Add Company Information</h2>
                    <form asp-action="AddCompany" method="post">
                        <div class="mb-3">
                            <label asp-for="CompanyName" class="form-label">Company Name</label>
                            <input asp-for="CompanyName" class="form-control" required />
                            <span asp-validation-for="CompanyName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IndustryType" class="form-label">Industry Type</label>
                            <input asp-for="IndustryType" class="form-control" required />
                            <span asp-validation-for="IndustryType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EstablishedDate" class="form-label">Established Date</label>
                            <input asp-for="EstablishedDate" class="form-control" type="date" required />
                            <span asp-validation-for="EstablishedDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Review" class="form-label">Review</label>
                            <textarea asp-for="Review" class="form-control" rows="4" required></textarea>
                            <span asp-validation-for="Review" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg" style="background-color: #ff66b2; border-color: #ff66b2;">
                                Add Company
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}