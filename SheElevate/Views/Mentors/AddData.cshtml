@model SheElevate.Models.Mentors

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4" style="color: #ff66b2;">Add Mentor</h2>
                    <form asp-action="AddData" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="FirstName" class="form-control" id="floatingFirstName" placeholder="First Name" required />
                                    <label asp-for="FirstName" for="floatingFirstName">First Name</label>
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="LastName" class="form-control" id="floatingLastName" placeholder="Last Name" required />
                                    <label asp-for="LastName" for="floatingLastName">Last Name</label>
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" id="floatingEmail" placeholder="name@example.com" required />
                            <label asp-for="Email" for="floatingEmail">Email address</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="PhoneNumber" class="form-control" id="floatingPhone" placeholder="Phone Number" />
                            <label asp-for="PhoneNumber" for="floatingPhone">Phone Number</label>
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProfilePicture" class="form-label">Profile Picture</label>
                            <input asp-for="ProfilePicture" class="form-control" type="file" id="formFile" />
                            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="YearsOfExperience" class="form-control" id="floatingExperience" placeholder="Years of Experience" type="number" required />
                                    <label asp-for="YearsOfExperience" for="floatingExperience">Years of Experience</label>
                                    <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="CompanyName" class="form-control" id="floatingCompany" placeholder="Company Name" required />
                                    <label asp-for="CompanyName" for="floatingCompany">Company Name</label>
                                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Rating" class="form-control" id="floatingRating" placeholder="Rating" type="number" step="0.1" />
                                    <label asp-for="Rating" for="floatingRating">Rating</label>
                                    <span asp-validation-for="Rating" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="DateJoined" class="form-control" id="floatingDate" placeholder="Date Joined" type="date" required />
                                    <label asp-for="DateJoined" for="floatingDate">Date Joined</label>
                                    <span asp-validation-for="DateJoined" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg" style="background-color: #ff66b2; border-color: #ff66b2;">Add Mentor</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}